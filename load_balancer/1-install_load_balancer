#!/usr/bin/env bash
# This script installs and configures HAProxy as a load balancer

# Update and install HAProxy
sudo apt update
sudo apt install -y haproxy

# Backup the original HAProxy config
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy to balance traffic
sudo bash -c 'cat <<EOF > /etc/haproxy/haproxy.cfg
frontend http_front
    bind *:80
    default_backend web_servers

    backend web_servers
    balance roundrobin
    server web-01 3.82.240.31:80 check
    server web-02 52.90.245.197:80 check
EOF'

# Restart HAProxy
sudo systemctl restart haproxy

